<UserControl x:Class="WiCAM.Pn4000.ScreenD3D.Controls.Screen3D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:interop="clr-namespace:System.Windows.Interop;assembly=PresentationCore"
             xmlns:controls="clr-namespace:WiCAM.Pn4000.ScreenD3D.Controls"
             Loaded="Screen3D_OnLoaded" MinHeight="1" MinWidth="1">
  <Grid x:Name="MainGrid">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="4*"/>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="AUTO"/>
    </Grid.ColumnDefinitions>
    <Grid x:Name="ControlContainer">
      <Image Name="ImageHost" Grid.Column="0" Stretch="Fill">
        <Image.Source>
          <interop:D3DImage x:Name="InteropImage"/>
        </Image.Source>
      </Image>
      <StackPanel Grid.Column="0" Margin="0,10,10,0" HorizontalAlignment="Right" VerticalAlignment="Top">
        <controls:Navigate3DView x:Name="Navigate3DView" Visibility="Visible" HorizontalAlignment="Right"/>
        <controls:ScreenInfoView x:Name="ScreenInfoView" Grid.Column="0" Margin="10,10,0,0" HorizontalAlignment="Right"
                                 VerticalAlignment="Top"/>
      </StackPanel>
    </Grid>
    <GridSplitter x:Name="GridSplitter" Visibility="Collapsed" Grid.Column="1" Width="5"
                  HorizontalAlignment="Stretch"/>
    <controls:DebugInfoView x:Name="DebugInfo" Grid.Column="2" Visibility="Visible"/>
  </Grid>
</UserControl>