<?xml version="1.0" encoding="utf-8"?>
<src1:PopupBase x:Class="WiCAM.Pn4000.PN3D.DeveloperTests.PopupTest3" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:src1="clr-namespace:WiCAM.Pn4000.Popup;assembly=WiCAM.Pn4000.Popup" Template="{DynamicResource PopupControlTemplate}" Style="{DynamicResource PopupStyle}" Title="PopupTest3" Height="450" Width="1000" xmlns:developertests="clr-namespace:WiCAM.Pn4000.PN3D.DeveloperTests;assembly=WiCAM.Pn4000.PN3D">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="300" />
      <ColumnDefinition Width="300" />
    </Grid.ColumnDefinitions>
    <Viewbox Grid.Column="0" Margin="10" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
      <src1:View3DControl Width="300" Height="300" Parts="{Binding Parts}" SelectID="{Binding SelectID}" />
    </Viewbox>
    <Border Background="#FFF5F5F5" Grid.Column="1">
      <ListBox Margin="10" BorderThickness="0" Background="#FFF5F5F5" ItemsSource="{Binding DisassemblyParts}">
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Name="border" BorderThickness="0" SnapsToDevicePixels="true" Height="75" MaxWidth="250">
              <Grid Name="contentPresenter">
                <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="70" />
                  <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Grid.Column="0" Width="70" Height="70" SnapsToDevicePixels="True" VerticalAlignment="Center" Margin="0" Source="{Binding LargeImage}" />
                <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
                  <TextBlock TextTrimming="CharacterEllipsis" VerticalAlignment="Center" TextAlignment="Left" HorizontalAlignment="Left" Padding="5,0,5,0" FontSize="13" FontWeight="SemiBold" Text="{Binding PartName}" />
                  <TextBlock TextTrimming="CharacterEllipsis" Foreground="#FF808080" VerticalAlignment="Center" TextAlignment="Left" HorizontalAlignment="Left" Padding="5,0,5,0" FontSize="10" Text="{Binding Info1}" />
                  <TextBlock TextTrimming="CharacterEllipsis" Foreground="#FF808080" VerticalAlignment="Center" TextAlignment="Left" HorizontalAlignment="Left" Padding="5,0,5,0" FontSize="10" Text="{Binding Info2}" />
                </StackPanel>
              </Grid>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ListBox>
    </Border>
    <StackPanel Grid.Column="2" Margin="10">
      <TextBlock>SelectedPartInfo</TextBlock>
    </StackPanel>
  </Grid>
</src1:PopupBase>