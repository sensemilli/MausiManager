<?xml version="1.0" encoding="utf-8"?>
<src1:PopupBase x:Class="WiCAM.Pn4000.PN3D.DeveloperTests.PopupTest1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:src1="clr-namespace:WiCAM.Pn4000.Popup;assembly=WiCAM.Pn4000.Popup" Template="{DynamicResource PopupControlTemplate}" Style="{DynamicResource PopupStyle}" Title="PopupTest1" Height="450" Width="522.266" xmlns:developertests="clr-namespace:WiCAM.Pn4000.PN3D.DeveloperTests;assembly=WiCAM.Pn4000.PN3D">
  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Orientation="Vertical" Margin="10">
      <TextBlock Style="{DynamicResource PnPopupHeaderText}" Text="Popup with controls" />
      <TextBlock Style="{DynamicResource PnPopupFreeText}" Text="Here we present a popup with a single set of controls (1 page). The input controls can support range control. The protection is two-track - it also works when entering both the value and filtration of allowed characters." />
      <Grid Margin="3,8,3,8">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*" />
          <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Orientation="Vertical">
          <Label Style="{DynamicResource PnPopupLabelForTextBox}" Content="Text Value" />
          <Label Style="{DynamicResource PnPopupLabelForTextBox}" Content="Int Value" />
          <Label Style="{DynamicResource PnPopupLabelForTextBox}" Content="Double Value" />
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical">
          <src1:TextBoxString CannotBeEmpty="True" IsAutoValidWhenLeaving="False" CharacterCasing="Upper" MaxLines="1" MaxLength="30" Grid.Column="1" Height="25" VerticalContentAlignment="Center" Margin="1" BorderThickness="1" Text="{Binding TextForEdit}" />
          <src1:TextBoxInt Name="Int1TextBox" Height="25" VerticalContentAlignment="Center" Margin="1" Min="1" IsAutoValidWhenLeaving="True" Default="12" Text="{Binding IntForEdit}" Max="{Binding Path=Int1Max}" IsValid="{Binding CheckInt1}" />
          <src1:TextBoxDouble Name="Int2TextBox" Height="25" VerticalContentAlignment="Center" Margin="1" Text="{Binding Double1ForEdit}" />
        </StackPanel>
      </Grid>
      <TextBlock Style="{DynamicResource PnPopupHeaderText}" Text="Next section with checkboxes" />
      <StackPanel Orientation="Vertical" Margin="8">
        <CheckBox Style="{DynamicResource PnPopupCheckBox}" Content="CheckBox Number 1" IsChecked="{Binding CheckBoxValue1}" />
        <CheckBox Style="{DynamicResource PnPopupCheckBox}" Content="CheckBox Number 2" IsChecked="{Binding CheckBoxValue2}" />
        <CheckBox Style="{DynamicResource PnPopupCheckBox}" Content="CheckBox Number 3" IsChecked="{Binding CheckBoxValue3}" />
        <CheckBox Style="{DynamicResource PnPopupCheckBox}" Content="CheckBox Number 4" IsChecked="{Binding CheckBoxValue4}" />
      </StackPanel>
    </StackPanel>
  </ScrollViewer>
</src1:PopupBase>