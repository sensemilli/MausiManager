<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WiCAM.Pn4000.PN3D.pn4UILib.Popup.EasyInternalPopup" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:pn4Services1="clr-namespace:WiCAM.Pn4000.pn4.pn4Services;assembly=pncommon" Title="EasyInternalPopup" Height="300" Width="300" ShowInTaskbar="False" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Icon="/pn4;component/tool.ico" xmlns:popup="clr-namespace:WiCAM.Pn4000.PN3D.pn4UILib.Popup;assembly=WiCAM.Pn4000.PN3D">
