<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="WiCAM.Pn4000.PN3D.Unfold.UI.View.ContextMenuItemView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:WiCAM.Pn4000.PN3D.Unfold.UI.View" xmlns:viewModels="clr-namespace:WiCAM.Pn4000.PN3D.Unfold.UI.ViewModel" Width="AUTO" Height="32" Background="#00FFFFFF" Margin="0,1,0,0">
  <Border BorderBrush="#FFA9A9A9" BorderThickness="1" CornerRadius="5">
    <Border.Background>
      <SolidColorBrush Color="White" Opacity="0.7" />
    </Border.Background>
    <Grid Margin="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="3*" />
      </Grid.ColumnDefinitions>
      <Viewbox Margin="2">
        <Image Source="{Binding Image}" />
      </Viewbox>
      <Button Style="{DynamicResource PnPopupOptionButton}" Margin="2" Grid.Column="1" Content="{Binding ButtonContent}" Command="{Binding Command}" />
    </Grid>
  </Border>
</UserControl>