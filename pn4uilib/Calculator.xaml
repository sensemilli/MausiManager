<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WiCAM.Pn4000.pn4.pn4UILib.Calculator" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:WiCAM.Pn4000.pn4.pn4UILib" Title="Calculator" MinHeight="400" MinWidth="180" Height="453" Width="254" WindowStartupLocation="Manual" WindowStyle="ToolWindow" ResizeMode="CanResize" ShowInTaskbar="False" Topmost="True" PreviewMouseRightButtonDown="Window_PreviewMouseRightButtonDown" PreviewKeyDown="Window_PreviewKeyDown" PreviewTextInput="Window_PreviewTextInput" IsVisibleChanged="Window_IsVisibleChanged" GotFocus="Window_GotFocus" MouseLeave="Window_MouseLeave" MouseEnter="Window_MouseEnter" LostMouseCapture="Window_LostMouseCapture" Deactivated="Window_Deactivated" PreviewMouseMove="Window_PreviewMouseMove" Closing="Window_Closing" SizeChanged="Window_SizeChanged">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <Style x:Key="GreenButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#FF90EE90" />
        <Setter Property="FontSize" Value="20" />
      </Style>
      <Style x:Key="BlueButton" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="#FFADD8E6" />
        <Setter Property="FontSize" Value="20" />
      </Style>
      <Style x:Key="NormalButton" TargetType="{x:Type Button}">
        <Setter Property="FontSize" Value="20" />
      </Style>
      <Style x:Key="InputStyle" TargetType="{x:Type TextBox}">
        <Setter Property="TextBox.TextAlignment" Value="Right" />
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Label Name="label1" Grid.Row="0" Margin="3" Content="Info what is input" Height="25" VerticalAlignment="Top" />
    <Border Name="border1" Grid.Row="1" Margin="3" Height="60" BorderBrush="#FFC0C0C0" BorderThickness="2" VerticalAlignment="Top" CornerRadius="3">
      <Border.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
          <GradientStop Color="White" Offset="0" />
          <GradientStop Color="#FFD6F5F5" Offset="1" />
        </LinearGradientBrush>
      </Border.Background>
      <Label Name="input" Content="Test" Height="55" HorizontalContentAlignment="Right" ClipToBounds="True" FlowDirection="LeftToRight" FontSize="32" HorizontalAlignment="Right" VerticalContentAlignment="Center" />
    </Border>
    <Button Name="button1" Margin="3" Grid.Row="2" Content="0" Height="35" Click="button_Click" />
    <Grid Row="3">
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>
      <Button Content="CE" Grid.Row="0" Grid.Column="0" Margin="2" Style="{StaticResource GreenButton}" Click="button_Click" />
      <Button Content="(" Grid.Row="0" Grid.Column="1" Margin="2" Style="{StaticResource BlueButton}" Click="button_Click" />
      <Button Content=")" Grid.Row="0" Grid.Column="2" Margin="2" Style="{StaticResource BlueButton}" Click="button_Click" />
      <Button Content="&lt;-" Grid.Row="0" Grid.Column="3" Margin="2" Style="{StaticResource GreenButton}" Click="button_Click" />
      <Button Content="7" Grid.Row="1" Grid.Column="0" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Content="8" Grid.Row="1" Grid.Column="1" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Content="9" Grid.Row="1" Grid.Column="2" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Content="/" Grid.Row="1" Grid.Column="3" Margin="2" Style="{StaticResource BlueButton}" Click="button_Click" />
      <Button Content="4" Grid.Row="2" Grid.Column="0" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Content="5" Grid.Row="2" Grid.Column="1" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Content="6" Grid.Row="2" Grid.Column="2" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Content="*" Grid.Row="2" Grid.Column="3" Margin="2" Style="{StaticResource BlueButton}" Click="button_Click" />
      <Button Content="1" Grid.Row="3" Grid.Column="0" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Content="2" Grid.Row="3" Grid.Column="1" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Content="3" Grid.Row="3" Grid.Column="2" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Content="-" Grid.Row="3" Grid.Column="3" Margin="2" Style="{StaticResource BlueButton}" Click="button_Click" />
      <Button Content="0" Grid.Row="4" Grid.Column="0" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Name="separatorButton" Content="." Grid.Row="4" Grid.Column="1" Margin="2" Style="{StaticResource NormalButton}" Click="button_Click" />
      <Button Content="=" Grid.Row="4" Grid.Column="2" Margin="2" Style="{StaticResource GreenButton}" Click="button_Click" />
      <Button Content="+" Grid.Row="4" Grid.Column="3" Margin="2" Style="{StaticResource BlueButton}" Click="button_Click" />
    </Grid>
  </Grid>
</Window>