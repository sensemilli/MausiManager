<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="WiCAM.Pn4000.pn4.pn4UILib.PartPaneControl" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:WiCAM.Pn4000.pn4.pn4UILib" 
             Loaded="UserControl_Loaded" PreviewMouseMove="UserControl_PreviewMouseMove">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <DataTemplate x:Key="PartPaneSizeAny">
        <StackPanel Orientation="Vertical">
          <TextBlock TextAlignment="Center" Text="{Binding Label1}" Foreground="{Binding Label1Color}" />
          <Image Stretch="None" Source="{Binding Image}" />
          <TextBlock TextAlignment="Center" Text="{Binding Label2}" />
          <TextBlock TextAlignment="Center" Text="{Binding Label3}" />
        </StackPanel>
      </DataTemplate>
      <Style x:Key="PartPaneHorizontal" TargetType="{x:Type ListBox}">
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ItemsPanel">
          <Setter.Value>
            <ItemsPanelTemplate>
              <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
            </ItemsPanelTemplate>
          </Setter.Value>
        </Setter>
      </Style>
      <Style x:Key="PartPaneVertical" TargetType="{x:Type ListBox}">
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Disabled" />
        <Setter Property="ItemsPanel">
          <Setter.Value>
            <ItemsPanelTemplate>
              <WrapPanel IsItemsHost="True" Orientation="Vertical" />
            </ItemsPanelTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid SnapsToDevicePixels="True">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="24" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Grid Column="0" SnapsToDevicePixels="True">
      <Grid.RowDefinitions>
        <RowDefinition Height="23" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Button Name="PartPaneButtonFly" Style="{DynamicResource PnPopupSmallButton}" SnapsToDevicePixels="True" Background="#00FFFFFF" 
              BorderBrush="#00FFFFFF" Grid.Row="0" Width="24" Height="23" Content="W" Click="PartPaneButtonFly_Click" />
      <Slider Name="PartPaneZoomSlider" Grid.Row="1" Orientation="Vertical" AutoToolTipPlacement="None" SmallChange="1" TickFrequency="1" 
              TickPlacement="BottomRight" Minimum="0" IsMoveToPointEnabled="False" IsSelectionRangeEnabled="False" IsSnapToTickEnabled="True" 
              Maximum="4" Value="1" Focusable="False" ValueChanged="PartPaneZoomSlider_ValueChanged" />
    </Grid>
    <ListBox Name="PartPane" Grid.Column="1" Style="{StaticResource PartPaneVertical}" ItemTemplate="{StaticResource PartPaneSizeAny}" 
             SelectionMode="Extended" ItemsSource="{Binding Path=NestingPartsData}" SelectionChanged="PartPane_SelectionChanged" 
             MouseLeftButtonUp="PartPane_MouseLeftButtonUp" MouseDoubleClick="PartPane_MouseDoubleClick" SizeChanged="PartPane_SizeChanged">
      <Control.Template>
        <ControlTemplate TargetType="{x:Type ListBox}">
          <ScrollViewer Name="ScrollViewer" Background="#FFFFFFFF">
            <ItemsPresenter />
          </ScrollViewer>
        </ControlTemplate>
      </Control.Template>
      <ItemsControl.ItemContainerStyle>
        <Style TargetType="{x:Type ListBoxItem}">
          <Setter Property="FrameworkElement.ToolTip">
            <Setter.Value>
              <ToolTip>
                <ListBox BorderThickness="0" Margin="0" Background="#00FFFFFF" ItemsSource="{Binding ToolTipText}" />
              </ToolTip>
            </Setter.Value>
          </Setter>
          <Setter Property="Template">
            <Setter.Value>
              <ControlTemplate TargetType="{x:Type ListBoxItem}">
                <Grid>
                  <Border Background="{TemplateBinding Control.Background}" />
                  <Border Background="#BEFFFFFF" Margin="1">
                    <Grid>
                      <Border Margin="0" Grid.Row="1" Background="#30FFFFFF" />
                    </Grid>
                  </Border>
                  <ContentPresenter Margin="5,0,5,0" />
                </Grid>
                <ControlTemplate.Triggers>
                  <MultiTrigger>
                    <MultiTrigger.Conditions>
                      <Condition Property="UIElement.IsMouseOver" Value="True" />
                      <Condition Property="ListBoxItem.IsSelected" Value="False" />
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#FFD3D3D3" />
                  </MultiTrigger>
                  <Trigger Property="ListBoxItem.IsSelected" Value="True">
                    <Setter Property="Background" Value="#FF00008B" />
                  </Trigger>
                </ControlTemplate.Triggers>
              </ControlTemplate>
            </Setter.Value>
          </Setter>
          <EventSetter Event="RequestBringIntoView" Handler="sv_RequestBringIntoView" />
          <EventSetter Event="MouseMove" Handler="sv_MouseMove" />
          <EventSetter Event="MouseEnter" Handler="sv_MouseEnter" />
          <EventSetter Event="MouseLeave" Handler="sv_MouseLeave" />
        </Style>
      </ItemsControl.ItemContainerStyle>
    </ListBox>
  </Grid>
</UserControl>