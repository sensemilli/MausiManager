          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
          </Grid.ColumnDefinitions>
          <Button Grid.Column="0" Margin="10,0,10,3" Style="{StaticResource ControlButton}" ToolTip="{DynamicResource BendView.PlayScreenView.SimulationSpeedDecreaseTt}" Command="{Binding SpeedDown}">
            <Path Style="{StaticResource PreviousPath}" Height="12" Stretch="Fill" Width="12" />
          </Button>
          <ProgressBar Grid.Column="1" Margin="0,0,0,3" ToolTip="{DynamicResource BendView.PlayScreenView.SimulationSpeed}" Value="{Binding SpeedFactor}" Minimum="{Binding SpeedMin}" Maximum="{Binding SpeedMax}" />
          <Label Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,-6,0,0" Content="{Binding SpeedFactor}" />
          <Button Grid.Column="2" Margin="10,0,10,3" Style="{StaticResource ControlButton}" ToolTip="{DynamicResource BendView.PlayScreenView.SimulationSpeedIncreaseTt}" Command="{Binding SpeedUp}">
            <Path Style="{StaticResource NextPath}" Height="12" Stretch="Fill" Width="12" />
          </Button>
        </Grid>
        <Label Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="4" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0,-7,0,0" Content="{Binding CurrentStepDesc}" />
      </Grid>
