          <RowDefinition Height="1*" />
          <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Button Style="{StaticResource ControlButton}" Grid.Column="0" ToolTip="{DynamicResource BendView.PlayScreenView.ToStartTt}" Command="{Binding GoToStart}">
          <Path Style="{StaticResource ToStartPath}" />
        </Button>
        <Button Style="{StaticResource ControlButton}" Grid.Column="1" ToolTip="{DynamicResource BendView.PlayScreenView.PreviousTt}" Command="{Binding Previous}">
          <Path Style="{StaticResource PreviousPath}" />
          <telerik:RadContextMenu.ContextMenu>
            <viewModels:StopContextmenu />
          </telerik:RadContextMenu.ContextMenu>
        </Button>
        <Button Style="{StaticResource ControlButton}" Grid.Column="2" ToolTip="{DynamicResource BendView.PlayScreenView.PlayTt}" Command="{Binding Play}" Visibility="{Binding PlayButtonVisibility}">
          <Path Style="{StaticResource PlayPath}" />
        </Button>
        <Button Style="{StaticResource ControlButton}" Grid.Column="2" ToolTip="{DynamicResource BendView.PlayScreenView.PauseTt}" Command="{Binding Pause}" Visibility="{Binding PauseButtonVisibility}">
          <Path Style="{StaticResource PausePath}" />
        </Button>
        <Button Style="{StaticResource ControlButton}" Grid.Column="3" ToolTip="{DynamicResource BendView.PlayScreenView.NextTt}" Command="{Binding Next}">
          <Path Style="{StaticResource NextPath}" />
          <telerik:RadContextMenu.ContextMenu>
            <viewModels:StopContextmenu />
          </telerik:RadContextMenu.ContextMenu>
        </Button>
        <Button Style="{StaticResource ControlButton}" Grid.Column="4" ToolTip="{DynamicResource BendView.PlayScreenView.ToEndTt}" Command="{Binding GoToEnd}">
          <Path Style="{StaticResource ToEndPath}" />
        </Button>
        <Button Style="{StaticResource ControlButton}" Grid.Column="5" ToolTip="{DynamicResource BendView.PlayScreenView.SettingsTt}" Command="{Binding Settings}">
          <Path Style="{StaticResource SettingsPath}" />
        </Button>
      </Grid>
    </Border>
    <Grid Row="2" Column="0" ColumnSpan="3" Margin="0,0,-00,0">
      <Viewbox Stretch="Fill" Margin="0,-0,0,-10" Height="Auto" MaxHeight="30">
        <Canvas Name="CanvasTimelineBackground" Width="10" Height="1" Background="#00FFFFFF" />
      </Viewbox>
      <controls:RadSlider RangeBase.Minimum="0" xmlns:controls="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls" controls:RadSlider.IsMoveToPointEnabled="True" controls:RadSlider.TickPlacement="TopLeft" FrameworkElement.ToolTip="{DynamicResource BendView.PlayScreenView.TimelineTt}" RangeBase.Maximum="{Binding SliderMaxValue}" RangeBase.Value="{Binding SliderValue}" controls:RadSlider.Ticks="{Binding SliderTicks}" />
    </Grid>
  </Grid>
</UserControl>