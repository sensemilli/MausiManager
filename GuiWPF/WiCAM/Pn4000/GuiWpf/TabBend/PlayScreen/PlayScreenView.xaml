        </Viewbox>
        <Viewbox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Margin="25,0,5,0" HorizontalAlignment="Left">
          <CheckBox Content="{DynamicResource BendView.PlayScreenView.CollisionControlIgnoreOverbend}" ToolTip="{DynamicResource BendView.PlayScreenView.CollisionControlIgnoreOverbendTt}" IsChecked="{Binding IgnoreOverbendCollisions}" />
        </Viewbox>
        <Viewbox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Margin="25,0,5,0" HorizontalAlignment="Left">
          <CheckBox Content="{DynamicResource BendView.PlayScreenView.CollisionControlIgnoreOpen}" ToolTip="{DynamicResource BendView.PlayScreenView.CollisionControlIgnoreOpenTt}" IsChecked="{Binding IgnoreOpeningCollisions}" />
        </Viewbox>
        <Viewbox Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" Margin="25,0,5,0" HorizontalAlignment="Left">
          <CheckBox Content="{DynamicResource BendView.PlayScreenView.CollisionControlIgnoreClose}" ToolTip="{DynamicResource BendView.PlayScreenView.CollisionControlIgnoreCloseTt}" IsChecked="{Binding IgnoreClosingCollisions}" />
        </Viewbox>
        <Viewbox Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Margin="25,0,5,0" HorizontalAlignment="Left">
          <CheckBox Content="{DynamicResource BendView.PlayScreenView.CollisionControlIgnoreLiftingAid}" ToolTip="{DynamicResource BendView.PlayScreenView.CollisionControlIgnoreLiftingAidTt}" IsChecked="{Binding IgnoreLiftingAidCollisions}" />
        </Viewbox>
        <Viewbox Grid.Row="5" Grid.Column="0" Margin="5,0,5,0" HorizontalAlignment="Left">
          <CheckBox Content="{DynamicResource BendView.PlayScreenView.SheetHandling}" ToolTip="{DynamicResource BendView.PlayScreenView.SheetHandlingTt}" IsChecked="{Binding SheetHandlingOn}" />
        </Viewbox>
        <TextBlock Grid.Row="6" Grid.ColumnSpan="3" Grid.Column="0" Margin="10,5,0,0" HorizontalAlignment="Center" Text="{DynamicResource BendView.PlayScreenView.SimulationSpeed}" ToolTip="{DynamicResource BendView.PlayScreenView.SimulationSpeedTt}" />
