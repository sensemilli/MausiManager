<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="WiCAM.Pn4000.GuiWpf.TabBend.EditTools.EditToolsViewHorizontal" 
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:WiCAM.Pn4000.GuiWpf.TabBend.EditTools" 
xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" 
xmlns:controls="clr-namespace:WiCAM.Pn4000.WpfBasics.Controls;assembly=WiCAM.Pn4000.WpfBasics">
  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <WrapPanel Orientation="Horizontal" Grid.IsSharedSizeScope="True" Margin="0, -10, -10, 0">
      <FrameworkElement.Resources>
        <ResourceDictionary>
          <Style x:Key="{x:Type Grid}" TargetType="{x:Type Grid}">
            <Setter Property="Margin" Value="0, 10, 10, 0" />
          </Style>
        </ResourceDictionary>
      </FrameworkElement.Resources>
      <Grid Name="gSelectionMode">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
                <telerik:RadToggleButton Grid.Column="0" FrameworkElement.MinWidth="30" ContentControl.Content="{DynamicResource l_popup.EditTools.SelectionMode.ToolPiece}" FrameworkElement.ToolTip="{DynamicResource l_popup.EditTools.SelectionMode.ToolPieceTt}" ToggleButton.IsChecked="{Binding IsSelectionModeToolPiece}" />
                <telerik:RadToggleButton Grid.Column="1" FrameworkElement.MinWidth="30" ContentControl.Content="{DynamicResource l_popup.EditTools.SelectionMode.Section}" FrameworkElement.ToolTip="{DynamicResource l_popup.EditTools.SelectionMode.SectionTt}" ToggleButton.IsChecked="{Binding IsSelectionModeToolSection}"  />
                <telerik:RadToggleButton Grid.Column="2" FrameworkElement.MinWidth="30" ContentControl.Content="{DynamicResource l_popup.EditTools.SelectionMode.Cluster}" FrameworkElement.ToolTip="{DynamicResource l_popup.EditTools.SelectionMode.ClusterTt}" ToggleButton.IsChecked="{Binding IsSelectionModeCluster}"  />
      </Grid>
      <Grid Name="gUndo">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiButton Grid.Column="0" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.Undo" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdUndo}" />
        <controls:WiButton Grid.Column="1" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.Redo" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdRedo}" />
      </Grid>
      <Grid Name="gAddPiece" Visibility="Collapsed">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiButton Grid.Column="0" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.ChangeToolProfile" ButtonBase.Command="{Binding CmdChangeToolProfile}" />
        <controls:WiButton Grid.Column="1" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.AddToolPiece" ButtonBase.Command="{Binding CmdAddToolPiece}" />
        <controls:WiButton Grid.Column="2" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.AddAdapter" ButtonBase.Command="{Binding CmdAddAdapter}" />
      </Grid>
      <Grid Name="gEditSection">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiButton Grid.Column="0" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.NewSectionForBend.CalculateSections" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdNewSectionForBends}" />
        <controls:WiButton Grid.Column="1" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.NewSection" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdNewSection}" />
        <controls:WiButton Grid.Column="2" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.SectionReplace" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdSectionReplace}" />
      </Grid>
      <Grid Name="gModify">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiButton Grid.Column="0" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.CenterTools" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdCenterTools}" />
        <controls:WiButton Grid.Column="1" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.NewSectionForBend.Prettify" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdPrettify}" />
      </Grid>
      <Grid Name="gPieceInfo">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiTextBlock Grid.Column="0" VerticalAlignment="Center" TextAlignment="Center" Background="#afff" ToolTip="{DynamicResource l_popup.EditTools.ToolNameTt}">
          <Run Text="{Binding ToolName, Mode=OneWay}" />
        </controls:WiTextBlock>
        <controls:WiTextBox Grid.Column="0" FrameworkElement.MinWidth="70" TextBox.TextAlignment="Center" Control.Background="#afff" FrameworkElement.ToolTip="{DynamicResource l_popup.EditTools.ToolNameTt}" TextBoxBase.IsReadOnly="True" TextBox.Text="{Binding ToolName, Mode=OneWay}" />
                <controls:WiTextBox Grid.Column="1" FrameworkElement.MinWidth="70" telerik:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditTools.GlobalPosition}" FrameworkElement.ToolTip="{DynamicResource l_popup.EditTools.GlobalPositionTt}" telerik:RadWatermarkTextBox.AdditionalContent="{Binding UnitLength}" TextBox.Text="{Binding GlobalPositionUi}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus" />
                <controls:WiTextBox Grid.Column="2" FrameworkElement.MinWidth="70" telerik:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditTools.AdjustSectionLength.Value}" FrameworkElement.ToolTip="{DynamicResource l_popup.EditTools.AdjustSectionLength.ValueTt}" p11:RadWatermarkTextBox.AdditionalContent="{Binding UnitLength}" TextBox.Text="{Binding AdjustSectionLengthUi,  UpdateSourceTrigger=PropertyChanged}" KeyUp="SectionLengthAlignCenter" GotFocus="UIElement_OnGotFocus" xmlns:p11="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls" />
      </Grid>
      <Grid Name="gExtend">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiButton Grid.Column="0" ToolTipService.ShowOnDisabled="True" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.AdjustSectionLength.ExtendLeft" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdAdjustSectionLengthLeft}" />
        <controls:WiButton Grid.Column="1" ToolTipService.ShowOnDisabled="True" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.AdjustSectionLength.ExtendCenter" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdAdjustSectionLengthCenter}" />
        <controls:WiButton Grid.Column="2" ToolTipService.ShowOnDisabled="True" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.AdjustSectionLength.ExtendRight" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdAdjustSectionLengthRight}" />
      </Grid>
      <Grid Name="gEditPiece">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiButton Grid.Column="0" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.FlipTools" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdFlipTools}" />
        <controls:WiButton Grid.Column="1" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.DeleteTools" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdDeleteTools}" />
      </Grid>
      <Grid Name="gMovePiece">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiButton Grid.Column="0" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.Move.Left" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdMoveLeft}" />
        <controls:WiTextBox Grid.Column="1" FrameworkElement.MinWidth="50" FrameworkElement.ToolTip="{DynamicResource l_popup.EditTools.Move.DistanceTt}" p11:RadWatermarkTextBox.AdditionalContent="{Binding UnitLength}" TextBox.Text="{Binding MoveDistanceUi}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus" xmlns:p11="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls" />
        <controls:WiButton Grid.Column="2" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.Move.Right" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdMoveRight}" />
      </Grid>
      <Grid Name="gMovePiece2">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiButton Grid.Column="0" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.Move.Up" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdMoveUp}" />
        <controls:WiButton Grid.Column="1" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.Move.Down" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdMoveDown}" />
      </Grid>
      <Grid Name="gGaps">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiTextBox Grid.Column="0" FrameworkElement.MinWidth="50" FrameworkElement.MaxWidth="100" p11:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditTools.Gap.Left}" TextBox.Text="{Binding GapLeftUi}" p11:RadWatermarkTextBox.AdditionalContent="{Binding UnitLength}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus" xmlns:p11="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls" />
        <controls:WiTextBox Grid.Column="1" FrameworkElement.MinWidth="50" FrameworkElement.MaxWidth="100" p11:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditTools.Gap.Right}" TextBox.Text="{Binding GapRightUi}" p11:RadWatermarkTextBox.AdditionalContent="{Binding UnitLength}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus" xmlns:p11="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls" />
      </Grid>
      <Grid Name="gAcb" Visibility="{Binding SensorDiskVisibility, Mode=OneWay}">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiComboBox Grid.Column="0" DisplayMemberPath="TypeName" MinWidth="50" ItemsSource="{Binding AllAvailableSensorDisks, Mode=OneWay}" SelectedValue="{Binding SelectedSensorDisk}" />
      </Grid>
      <Grid Name="gSetup">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiComboBox Grid.Column="0" MinWidth="50" MaxWidth="100" DisplayMemberPath="Desc" SelectedValuePath="Setup" ItemsSource="{Binding ToolSetups}" SelectedValue="{Binding SelectedSetup}" />
        <controls:WiButton Grid.Column="1" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.DeleteToolSetup" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdDeleteToolSetup}" />
        <controls:WiButton Grid.Column="2" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.LoadToolSetups" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdLoadToolSetups}" />
        <controls:WiButton Grid.Column="3" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.SaveToolSetups" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdSaveToolSetups}" />
      </Grid>
      <Grid Name="gMsc">
        <Grid.RowDefinitions>
          <RowDefinition Height="*" SharedSizeGroup="height" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <controls:WiButton Grid.Column="0" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.ExtractToolPieces" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdExtractToolPieces}" />
        <controls:WiButton Grid.Column="1" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.MergeToolSections" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdMergeToolSections}" />
        <controls:WiButton Grid.Column="2" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.AssignSelectedBendsToLocalTools" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdAssignBendsToLocalSections}" />
        <controls:WiButton Grid.Column="3" FrameworkElement.MinWidth="50" Key="l_popup.EditTools.CmdAssignAndMoveBendsToSections" Control.Foreground="#FF000000" Control.FontSize="20" RadGlyph="" ButtonBase.Command="{Binding CmdAssignAndMoveBendsToSections}" />
      </Grid>
    </WrapPanel>
  </ScrollViewer>
</UserControl>