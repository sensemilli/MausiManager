<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="WiCAM.Pn4000.GuiWpf.TabBend.EditFingers.EditFingersView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:WiCAM.Pn4000.GuiWpf.TabBend.EditFingers" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns:controls="clr-namespace:WiCAM.Pn4000.WpfBasics.Controls;assembly=WiCAM.Pn4000.WpfBasics">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <Style x:Key="PathStyle" TargetType="{x:Type Path}">
        <Setter Property="Shape.Stretch" Value="Uniform" />
        <Setter Property="Fill" Value="#FF00498A" />
        <Setter Property="Stroke" Value="#FFFFFFFF" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Width" Value="32" />
        <Setter Property="Height" Value="32" />
        <Setter Property="UIElement.RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="Margin" Value="0" />
      </Style>
      <Style x:Key="LeftArrow" TargetType="{x:Type Path}" BasedOn="{StaticResource PathStyle}">
        <Setter Property="Data" Value="M0,16 L0,16 L0,16 L25,0 L25,16 L25,31 L0,16 L0,16 L0,16" />
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <StackPanel Grid.Row="0">
        <telerik:RadComboBox MinWidth="100" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" DisplayMemberPath="Name" SelectedValuePath="Finger" ItemsSource="{Binding AvailableFingers}" SelectedValue="{Binding SelectedFinger}" />
      </StackPanel>
      <StackPanel Grid.Row="3" Visibility="Visible">
        <CheckBox Content="{DynamicResource l_popup.EditFingers.AutoRetract}" Visibility="Hidden" IsChecked="{Binding AutoRetract}" />
        <CheckBox Content="{DynamicResource l_popup.EditFingers.Snap}" IsChecked="{Binding SnapActive}" />
        <CheckBox Content="{DynamicResource l_popup.EditFingers.Fix}" Visibility="Hidden" IsChecked="{Binding IsFingerFixed}" />
      </StackPanel>
      <Grid Row="1">
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
                <telerik:RadWatermarkTextBox Grid.Column="2" Grid.Row="0" telerik:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditFingers.PosZ}" FrameworkElement.MinWidth="100" TextBox.Text="{Binding ZUi}" telerik:RadWatermarkTextBox.AdditionalContent="{Binding LengthUnit}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus" />
                <telerik:RadWatermarkTextBox Grid.Column="0" Grid.Row="0" telerik:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditFingers.PosX}" FrameworkElement.MinWidth="100" TextBox.Text="{Binding XUi}" telerik:RadWatermarkTextBox.AdditionalContent="{Binding LengthUnit}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus" />
                <telerik:RadWatermarkTextBox Grid.Column="1" Grid.Row="0" telerik:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditFingers.PosR}" FrameworkElement.MinWidth="100" TextBox.Text="{Binding RUi}" telerik:RadWatermarkTextBox.AdditionalContent="{Binding LengthUnit}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus"/>
                <telerik:RadWatermarkTextBox Grid.Column="0" Grid.Row="1" telerik:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditFingers.Retract}" FrameworkElement.MinWidth="100" TextBox.Text="{Binding RetractXUi}" telerik:RadWatermarkTextBox.AdditionalContent="{Binding LengthUnit}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus"/>
                    <telerik:RadWatermarkTextBox Grid.Column="0" Grid.Row="2" telerik:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditFingers.AutoRetractVal}" FrameworkElement.MinWidth="100" UIElement.IsEnabled="False" TextBox.Text="{Binding RetractXAutoUi, TargetNullValue=*}" telerik:RadWatermarkTextBox.AdditionalContent="{Binding LengthUnit}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus"/>
                    <telerik:RadWatermarkTextBox Grid.Column="1" Grid.Row="1" telerik:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditFingers.Retract}" FrameworkElement.MinWidth="100" TextBox.Text="{Binding RetractRUi}" telerik:RadWatermarkTextBox.AdditionalContent="{Binding LengthUnit}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus" />
                    <telerik:RadWatermarkTextBox Grid.Column="2" Grid.Row="1" telerik:RadWatermarkTextBox.Label="{DynamicResource l_popup.EditFingers.Retract}" FrameworkElement.MinWidth="100" TextBox.Text="{Binding RetractZUi}" telerik:RadWatermarkTextBox.AdditionalContent="{Binding LengthUnit}" KeyUp="UIElement_OnKeyUp" GotFocus="UIElement_OnGotFocus" />
      </Grid>
      <Grid Row="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="2">
        <Grid.RowDefinitions>
          <RowDefinition Height="25" />
          <RowDefinition Height="100" />
          <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="30" />
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Grid.Column="1">
          <ComboBox Width="110" Height="95" Margin="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" MaxDropDownHeight="620" ItemsSource="{Binding AvailableFingerStopCombinations}" SelectedItem="{Binding SelectedFingerCombination}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <WrapPanel MaxWidth="630" />
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                  <Image VerticalAlignment="Center" HorizontalAlignment="Center" MaxHeight="200" MaxWidth="200" Source="{Binding Img}" />
                </StackPanel>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
          <controls:WiButton FrameworkElement.Height="25" FrameworkElement.Width="110" FrameworkElement.VerticalAlignment="Stretch" FrameworkElement.HorizontalAlignment="Stretch" Control.VerticalContentAlignment="Stretch" Control.HorizontalContentAlignment="Stretch" ButtonBase.Command="{Binding NextTopPosition}" UIElement.IsEnabled="{Binding NextTopEnabled}">
            <Viewbox VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
              <Path Style="{StaticResource LeftArrow}">
                <UIElement.RenderTransform>
                  <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="90" />
                    <TranslateTransform />
                  </TransformGroup>
                </UIElement.RenderTransform>
              </Path>
            </Viewbox>
          </controls:WiButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
          <controls:WiButton FrameworkElement.Height="90" FrameworkElement.Width="25" FrameworkElement.VerticalAlignment="Stretch" FrameworkElement.HorizontalAlignment="Stretch" Control.VerticalContentAlignment="Stretch" Control.HorizontalContentAlignment="Stretch" ButtonBase.Command="{Binding NextLeftPosition}" UIElement.IsEnabled="{Binding NextLeftEnabled}">
            <Viewbox VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
              <Path Style="{StaticResource LeftArrow}">
                <UIElement.RenderTransform>
                  <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="0" />
                    <TranslateTransform />
                  </TransformGroup>
                </UIElement.RenderTransform>
              </Path>
            </Viewbox>
          </controls:WiButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center">
          <controls:WiButton FrameworkElement.Height="90" FrameworkElement.Width="25" FrameworkElement.VerticalAlignment="Stretch" FrameworkElement.HorizontalAlignment="Stretch" Control.VerticalContentAlignment="Stretch" Control.HorizontalContentAlignment="Stretch" ButtonBase.Command="{Binding NextRightPosition}" UIElement.IsEnabled="{Binding NextRightEnabled}">
            <Viewbox VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
              <Path Style="{StaticResource LeftArrow}">
                <UIElement.RenderTransform>
                  <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="180" />
                    <TranslateTransform />
                  </TransformGroup>
                </UIElement.RenderTransform>
              </Path>
            </Viewbox>
          </controls:WiButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
          <controls:WiButton FrameworkElement.Height="25" FrameworkElement.Width="100" FrameworkElement.VerticalAlignment="Stretch" FrameworkElement.HorizontalAlignment="Stretch" Control.VerticalContentAlignment="Stretch" Control.HorizontalContentAlignment="Stretch" ButtonBase.Command="{Binding NextBottomPosition}" UIElement.IsEnabled="{Binding NextBottomEnabled}">
            <Viewbox VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
              <Path Style="{StaticResource LeftArrow}">
                <UIElement.RenderTransform>
                  <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="270" />
                    <TranslateTransform />
                  </TransformGroup>
                </UIElement.RenderTransform>
              </Path>
            </Viewbox>
          </controls:WiButton>
        </StackPanel>
      </Grid>
    </Grid>
  </ScrollViewer>
</UserControl>