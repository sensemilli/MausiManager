<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WiCAM.Pn4000.GuiWpf.F7.F7View" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:WiCAM.Pn4000.GuiWpf.F7" 
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns:system="clr-namespace:System;assembly=System.Runtime"
        Title="{DynamicResource l_popup.F7.Titel}" Height="450" Width="800">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="1*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
        <telerik:RadWatermarkTextBox telerik:RadWatermarkTextBox.WatermarkContent="{DynamicResource l_popup.F7.Description}" TextBox.TextWrapping="Wrap" TextBoxBase.AcceptsReturn="True" TextBoxBase.VerticalScrollBarVisibility="Auto" Control.Padding="10" TextBox.Text="{Binding Desc, UpdateSourceTrigger=PropertyChanged}" />
    <Grid Row="1">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
        <ColumnDefinition Width="1*" />
      </Grid.ColumnDefinitions>
      <Button Grid.Column="0" Content="{DynamicResource l_popup.F7.Cancel}" Command="{Binding CmdCancel}" />
      <Button Grid.Column="1" Content="{DynamicResource l_popup.F7.localFile}" Command="{Binding CmdCreateLocal}" />
      <Button Grid.Column="2" Content="{DynamicResource l_popup.F7.uploadFile}" Command="{Binding CmdSendData}" />
    </Grid>
  </Grid>
</Window>