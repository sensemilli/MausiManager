<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="WiCAM.Pn4000.GuiWpf.Ui3D.MachineConfig.FingerStopGeneralView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:loc2="clr-namespace:BendDataBase.WiCAM.Pn4000.pn4.Sym3D.BendSimulation.Converter;assembly=BendDataBase" xmlns:system="clr-namespace:System;assembly=mscorlib" xmlns:machineConfig="clr-namespace:WiCAM.Pn4000.GuiWpf.Ui3D.MachineConfig" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns:gridView="clr-namespace:WiCAM.Pn4000.WpfControls.GridView;assembly=WiCAM.Pn4000.WpfControls" Background="#00FFFFFF" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <loc2:EnumToBoolConverter x:Key="enumToBool" />
      <loc2:BoolToIntConverter x:Key="boolToInt" />
      <Style x:Key="styleViewBoxCheck" TargetType="{x:Type Viewbox}">
        <Setter Property="Margin" Value="0,5,0,5" />
      </Style>
      <Style x:Key="styleListCheckBox" TargetType="{x:Type CheckBox}">
        <Setter Property="Width" Value="15" />
        <Setter Property="Height" Value="15" />
      </Style>
      <machineConfig:ImagePathConverter x:Key="ImagePathConverter" />
      <system:String x:Key="Img_DistFingers">FingerSettings_DistFingers.png</system:String>
      <system:String x:Key="Img_MinEdgeLength">FingerSettings_MinEdgeLength.png</system:String>
      <system:String x:Key="Img_IgnorePosNextToTools">FingerSettings_IgnorePosNextToTools.png</system:String>
      <system:String x:Key="Img_IgnorePosOnNotFlatEdges">FingerSettings_IgnorePosOnNotFlatEdges.png</system:String>
      <system:String x:Key="Img_IgnorePosInHoles">FingerSettings_IgnorePosInHoles.png</system:String>
      <system:String x:Key="Img_IgnorePosAtProcessedBends">FingerSettings_IgnorePosAtProcessedBends.png</system:String>
      <system:String x:Key="Img_DistToCorner">FingerSettings_DistToCorner.png</system:String>
      <system:String x:Key="Img_SafetyDistAboveTools">FingerSettings_SafetyDistAboveTools.png</system:String>
      <system:String x:Key="Img_MinDistSupports">FingerSettings_MinDistSupport.png</system:String>
      <system:String x:Key="Img_FingerFaceAlignment">FingerSettings_FingerFaceAlignment.png</system:String>
      <system:String x:Key="Img_FingerFaceAlignmentCorrection">FingerSettings_FingerFaceAlignmentCorrection.png</system:String>
      <system:String x:Key="Img_SupportUsage">FingerSettings_SupportUsage.png</system:String>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Border BorderBrush="#FFA9A9A9" BorderThickness="1" CornerRadius="7.5">
    <Border.Background>
      <SolidColorBrush Color="WhiteSmoke" Opacity="0.8" />
    </Border.Background>
    <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="1*" />
          <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <StackPanel Margin="50,10,50,0" Orientation="Vertical">
          <TextBlock Margin="0,0,0,15" Text="{DynamicResource l_popup.FingerStopGeneralView.NeededConfiguration}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" TextDecorations="Underline" Grid.ColumnSpan="2" />
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.MinDistFingers}" Style="{DynamicResource PnPopupLabelForTextBox}">
              <FrameworkElement.ToolTip>
                <StackPanel>
                  <Image Source="{Binding Source={StaticResource Img_DistFingers}, Converter={StaticResource ImagePathConverter}}" />
                </StackPanel>
              </FrameworkElement.ToolTip>
            </Label>
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.MinFingerDistance}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.MinLengthForEdge}" Style="{DynamicResource PnPopupLabelForTextBox}">
              <FrameworkElement.ToolTip>
                <StackPanel>
                  <Image Source="{Binding Source={StaticResource Img_MinEdgeLength}, Converter={StaticResource ImagePathConverter}}" />
                </StackPanel>
              </FrameworkElement.ToolTip>
            </Label>
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.MinEdgeLength}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="2*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.IgnoreStopsNextToTools}" Style="{DynamicResource PnPopupLabelForTextBox}">
              <FrameworkElement.ToolTip>
                <StackPanel>
                  <Image Source="{Binding Source={StaticResource Img_IgnorePosNextToTools}, Converter={StaticResource ImagePathConverter}}" />
                </StackPanel>
              </FrameworkElement.ToolTip>
            </Label>
            <CheckBox Style="{StaticResource styleListCheckBox}" Grid.Column="1" IsChecked="{Binding FingerStopSettings.IgnoreFingerStopsNextToTools}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="2*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.IgnoreCylindricalFaces}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <CheckBox Style="{StaticResource styleListCheckBox}" Grid.Column="1" IsChecked="{Binding FingerStopSettings.IgnoreNoneFlatFacesAsStopPosition}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="2*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.IgnoreStopsInHoles}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <CheckBox Style="{StaticResource styleListCheckBox}" Grid.Column="1" IsChecked="{Binding FingerStopSettings.IgnoreHolesFacesAsStopPosition}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="2*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.IgnoreBentupSideFaces}" Style="{DynamicResource PnPopupLabelForTextBox}">
              <FrameworkElement.ToolTip>
                <StackPanel>
                  <Image Source="{Binding Source={StaticResource Img_IgnorePosAtProcessedBends}, Converter={StaticResource ImagePathConverter}}" />
                </StackPanel>
              </FrameworkElement.ToolTip>
            </Label>
            <CheckBox Style="{StaticResource styleListCheckBox}" Grid.Column="1" IsChecked="{Binding FingerStopSettings.IgnoreBentUpFacesAsStopPosition}" />
          </Grid>
          <Grid Margin="2" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.MinimizeZAxesMovements}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <Grid Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
              </Grid.ColumnDefinitions>
              <RadioButton Grid.Column="0" Content="{DynamicResource l_popup.FingerStopGeneralView.AllFaces}" Height="30" VerticalContentAlignment="Center" GroupName="minZMove" IsChecked="{Binding Path=FingerStopSettings.MinimizeZAxesMovements, Converter={StaticResource boolToInt}, ConverterParameter=1}" />
              <RadioButton Grid.Column="1" Content="{DynamicResource l_popup.FingerStopGeneralView.BendFaces}" Height="30" VerticalContentAlignment="Center" GroupName="minZMove" IsChecked="{Binding Path=FingerStopSettings.MinimizeZAxesMovements, Converter={StaticResource boolToInt}, ConverterParameter=2}" />
              <RadioButton Grid.Column="2" Content="{DynamicResource l_popup.FingerStopGeneralView.Off}" Height="30" Width="50" VerticalContentAlignment="Center" GroupName="minZMove" IsChecked="{Binding Path=FingerStopSettings.MinimizeZAxesMovements, Converter={StaticResource boolToInt}, ConverterParameter=0}" />
            </Grid>
          </Grid>
          <Grid Margin="2" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.IgnoreZPositions}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <CheckBox Style="{StaticResource styleListCheckBox}" Grid.Column="1" IsChecked="{Binding FingerStopSettings.IgnoreZPositions}" />
          </Grid>
        </StackPanel>
        <StackPanel Margin="50,10,50,0" Grid.Column="1" Orientation="Vertical">
          <TextBlock Margin="0,0,0,15" Text="{DynamicResource l_popup.FingerStopGeneralView.PreferredConfiguration}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" TextDecorations="Underline" Grid.ColumnSpan="2" />
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.PrefDistFromCorner}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.PrefDistanceFromCorner}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.PrefSafetyDistAboveDie}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.PrefSafetyDistanceAboveDie}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.MinDistForVerticalSupport}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.MinDistanceForVerticalSupport}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.PrefSheetFingerStopFaceAlignment}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <Grid Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
              </Grid.ColumnDefinitions>
              <RadioButton Grid.Column="2" Content="{DynamicResource l_popup.FingerStopGeneralView.Top}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.PrefSheetFingerstopFaceAlignment, Converter={StaticResource boolToInt}, ConverterParameter=0}" />
              <RadioButton Grid.Column="1" Content="{DynamicResource l_popup.FingerStopGeneralView.Centre}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.PrefSheetFingerstopFaceAlignment, Converter={StaticResource boolToInt}, ConverterParameter=1}" />
              <RadioButton Grid.Column="0" Content="{DynamicResource l_popup.FingerStopGeneralView.Bottom}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.PrefSheetFingerstopFaceAlignment, Converter={StaticResource boolToInt}, ConverterParameter=2}" />
            </Grid>
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.PrefSheetFingerStopFaceAlignmentCorrection}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.PrefSheetFingerstopFaceAlignmentCorrection}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.VerticalSupport}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <Grid Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
              </Grid.ColumnDefinitions>
              <RadioButton Grid.Column="0" Content="{DynamicResource l_popup.FingerStopGeneralView.PrefVerticalSupport.Default}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.VerticalSupport, Converter={StaticResource boolToInt}, ConverterParameter=0}" />
              <RadioButton Grid.Column="1" Content="{DynamicResource l_popup.FingerStopGeneralView.PrefVerticalSupport.Prefer}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.VerticalSupport, Converter={StaticResource boolToInt}, ConverterParameter=1}" />
              <RadioButton Grid.Column="2" Content="{DynamicResource l_popup.FingerStopGeneralView.PrefVerticalSupport.Avoid}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.VerticalSupport, Converter={StaticResource boolToInt}, ConverterParameter=2}" />
            </Grid>
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.AllowCornerStops}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <CheckBox Style="{StaticResource styleListCheckBox}" Grid.Column="1" IsChecked="{Binding FingerStopSettings.AllowCornerStops}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.AllowCylinderStops}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <CheckBox Style="{StaticResource styleListCheckBox}" Grid.Column="1" IsChecked="{Binding FingerStopSettings.AllowCylinderStops}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.PrefNumberOfCornerStops}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <Grid Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
              </Grid.ColumnDefinitions>
              <RadioButton Grid.Column="0" Content="{DynamicResource l_popup.FingerStopGeneralView.0}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.PrefNumberOfCornerStops, Converter={StaticResource boolToInt}, ConverterParameter=0}" Checked="ToggleButtonCorners0_2_OnChecked" />
              <RadioButton Grid.Column="1" Content="{DynamicResource l_popup.FingerStopGeneralView.1}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.PrefNumberOfCornerStops, Converter={StaticResource boolToInt}, ConverterParameter=1}" Checked="ToggleButton1_OnChecked" />
              <RadioButton Grid.Column="2" Content="{DynamicResource l_popup.FingerStopGeneralView.2}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.PrefNumberOfCornerStops, Converter={StaticResource boolToInt}, ConverterParameter=2}" Checked="ToggleButtonCorners0_2_OnChecked" />
            </Grid>
          </Grid>
          <Grid Name="GridPrefCornerStopChoice" Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.PrefCornerStops}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <Grid Column="1">
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
              </Grid.ColumnDefinitions>
              <RadioButton Grid.Column="0" Content="{DynamicResource l_popup.FingerStopGeneralView.PrefCornerStops.Left}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.PrefCornerStop, Converter={StaticResource boolToInt}, ConverterParameter=0}" />
              <RadioButton Grid.Column="1" Content="{DynamicResource l_popup.FingerStopGeneralView.PrefCornerStops.Right}" Height="30" VerticalContentAlignment="Center" GroupName="cornerStops" IsChecked="{Binding Path=FingerStopSettings.PrefCornerStop, Converter={StaticResource boolToInt}, ConverterParameter=1}" />
            </Grid>
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.PrefRetractDist}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.PrefRetractDistance}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.PrefRetractSafetyDist}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.PrefRetractSafetyDistance}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.RetractWithSameValue}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <CheckBox Style="{StaticResource styleListCheckBox}" Grid.Column="1" IsChecked="{Binding FingerStopSettings.RetractWithSameValue}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.UseHemSafePositionXValue}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <CheckBox Style="{StaticResource styleListCheckBox}" Grid.Column="1" IsChecked="{Binding FingerStopSettings.UseHemFingerX}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.HemSafePositionX1Value}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.HemFingerX1}" />
          </Grid>
          <Grid Margin="2">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.HemSafePositionX2Value}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.HemFingerX2}" />
          </Grid>
          <Grid Margin="2">
            <gridView:PnGridViewContainer ShowExport="False">
              <gridView:PnGridViewContainer.GridView>
                <telerik:RadGridView ShowColumnFooters="True" GroupRenderMode="Flat" NewRowPosition="Top" AutoGenerateColumns="False" ItemsSource="{Binding FingerStopSettings.RetractThresholdByThickness}">
                  <telerik:GridViewDataControl.Columns>
                    <telerik:GridViewDataColumn Header="{DynamicResource l_popup.FingerStopGeneralView.Thickness}" DataMemberBinding="{Binding Thickness}" />
                    <telerik:GridViewDataColumn Header="{DynamicResource l_popup.FingerStopGeneralView.RetractThreshold}" DataMemberBinding="{Binding RetractThreshold}" />
                  </telerik:GridViewDataControl.Columns>
                </telerik:RadGridView>
              </gridView:PnGridViewContainer.GridView>
            </gridView:PnGridViewContainer>
          </Grid>
        </StackPanel>
        <StackPanel Margin="50,10,50,0" Grid.Column="2" Orientation="Vertical" Visibility="Collapsed">
          <TextBlock Margin="0,0,0,15" Text="{DynamicResource l_popup.FingerStopGeneralView.PreConfiguration}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" TextDecorations="Underline" Grid.ColumnSpan="2" />
          <Grid Margin="2" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.FixedLeftZPosition}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.FixedLeftZPosition}" />
          </Grid>
          <Grid Margin="2" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.FixedRightZPosition}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.FixedRightZPosition}" />
          </Grid>
          <Grid Margin="2" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.MinRetractDist}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.MinRetractDistance}" />
          </Grid>
          <Grid Margin="2" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.MinXDistForHemming}" Style="{DynamicResource PnPopupLabelForTextBox}" />
            <TextBox Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Column="1" Text="{Binding FingerStopSettings.MinXDistanceForHemming}" />
          </Grid>
          <Grid Margin="2" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="1*" />
              <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Label Content="{DynamicResource l_popup.FingerStopGeneralView.PrefConfigurationSide}" Style="{DynamicResource PnPopupLabelForTextBox}" Margin="0,2,0,1" Grid.ColumnSpan="2" Grid.Row="0" />
            <Grid Row="10" RowSpan="2" ColumnSpan="2">
              <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
              </Grid.ColumnDefinitions>
              <RadioButton Grid.Column="0" Content="{DynamicResource l_popup.FingerStopGeneralView.CentreOfGravityInFront}" Width="168" Height="25" VerticalContentAlignment="Center" GroupName="configSide" IsChecked="{Binding Path=FingerStopSettings.PrefConfigurationSide, Converter={StaticResource enumToBool}, ConverterParameter=CogInFront}" />
              <RadioButton Grid.Column="1" Content="{DynamicResource l_popup.FingerStopGeneralView.MinManipulation}" Width="168" Height="25" VerticalContentAlignment="Center" GroupName="configSide" IsChecked="{Binding Path=FingerStopSettings.PrefConfigurationSide, Converter={StaticResource enumToBool}, ConverterParameter=MinManipulation}" />
              <CheckBox Grid.Column="2" Content="{DynamicResource l_popup.FingerStopGeneralView.IgnoreStability}" Width="168" Height="25" VerticalContentAlignment="Center" IsChecked="{Binding FingerStopSettings.IgnoreStability}" />
            </Grid>
          </Grid>
        </StackPanel>
      </Grid>
    </ScrollViewer>
  </Border>
</UserControl>