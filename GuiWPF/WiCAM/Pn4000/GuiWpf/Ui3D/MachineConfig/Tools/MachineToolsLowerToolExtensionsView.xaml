              <RowDefinition Height="AUTO" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="AUTO" />
              <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.ColumnSpan="2" Grid.RowSpan="2" VerticalAlignment="Bottom" TextAlignment="Center" Background="#00FFFFFF" FontSize="20" TextDecorations="Underline" Text="{DynamicResource l_popup.DiesView.DieProfiles}" />
