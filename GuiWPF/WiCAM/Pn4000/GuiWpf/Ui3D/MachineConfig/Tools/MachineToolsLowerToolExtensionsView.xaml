            <telerik:RadContextMenu>
              <telerik:RadMenuItem Header="{DynamicResource l_popup.DiesView.ImportTrumpfARVHems}" Command="{Binding TrumpfARVHemsCommand}" />
            </telerik:RadContextMenu>
