          <Grid.RowDefinitions>
            <RowDefinition Height="AUTO" />
            <RowDefinition Height="1*" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="1*" />
          </Grid.ColumnDefinitions>
          <Grid>
            <Grid.RowDefinitions>
