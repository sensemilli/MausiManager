<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="WiCAM.Pn4000.GuiWpf.Ui3D.MachineConfig.Tools.Importers.UiElements.SelectItemPopup" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local="clr-namespace:WiCAM.Pn4000.GuiWpf.Ui3D.MachineConfig.Tools.Importers.UiElements" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" Title="{DynamicResource l_popup.PopupMachineConfig.Tools.Importers.SelectToolsForImport}" Topmost="True" Height="Auto" Width="Auto" SizeToContent="WidthAndHeight">
