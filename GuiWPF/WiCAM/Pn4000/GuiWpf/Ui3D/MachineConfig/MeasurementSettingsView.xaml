    <popup:TextBoxDoubleValid Min="0" Style="{DynamicResource PnPopupTextBoxStyle}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Text="{Binding MaxVWidth, FallbackValue=0.0}" />
