<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="WiCAM.Pn4000.GuiWpf.Ui3D.MachineConfig.MachineConfigView" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:viewModels="clr-namespace:WiCAM.Pn4000.GuiWpf.Ui3D.MachineConfig" xmlns:enum="clr-namespace:BendDataBase.WiCAM.Pn4000.pn4.Sym3D.BendSimulation.PnConfig.Machine;assembly=BendDataBase" xmlns:popup="clr-namespace:WiCAM.Pn4000.Popup;assembly=WiCAM.Pn4000.Popup" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns:machine="clr-namespace:BendDataBase.WiCAM.Pn4000.pn4.Sym3D.BendSimulation.PnConfig.Machine;assembly=WiCAM.Pn4000.Contracts" xmlns:enums="clr-namespace:WiCAM.Pn4000.Contracts.MachineBend.Enums;assembly=WiCAM.Pn4000.Contracts" x:Name="uc" Background="#00FFFFFF" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <BooleanToVisibilityConverter x:Key="visibilityConverter" />
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Border BorderBrush="#FFA9A9A9" BorderThickness="1" CornerRadius="7.5">
    <Border.Background>
      <SolidColorBrush Color="WhiteSmoke" Opacity="0.8" />
    </Border.Background>
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
      <Grid.RowDefinitions>
        <RowDefinition Height="1*" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
          </Grid.ColumnDefinitions>
          <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <viewModels:PressDataView Grid.Row="0" Margin="0" DataContext="{Binding PressDataViewModel}" />
            <Grid Row="1">
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
              </Grid.RowDefinitions>
              <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
              </Grid.ColumnDefinitions>
              <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5,0" Text="{DynamicResource l_popup.PopupSelectMachine.ColumnRemark1}" />
              <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Remark1}" />
              <TextBlock Grid.Row="1" Grid.Column="0" Margin="5,0" VerticalAlignment="Center" Text="{DynamicResource l_popup.PopupSelectMachine.ColumnRemark2}" />
              <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Remark2}" />
            </Grid>
            <Grid Row="2" Visibility="{Binding Path=PressDataViewModel.UseAngleMeasurement, Converter={StaticResource visibilityConverter}}">
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
              </Grid.RowDefinitions>
              <TextBlock Text="{DynamicResource l_popup.MachineConfigView.AngleMeasuringSystemTitle}" HorizontalAlignment="Center" Grid.Row="0" FontWeight="Bold" TextDecorations="Underline" FontSize="20" />
              <viewModels:MeasurementSettingsView Grid.Row="1" Margin="0" DataContext="{Binding MeasurementSettingsViewModel}" />
            </Grid>
          </Grid>
          <Grid Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*" />
              <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
              <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Style="{DynamicResource PnPopupLabelForTextBox}" Content="{DynamicResource l_popup.MachineConfigView.MachinePath}" Grid.Row="0" Grid.Column="0" />
            <Label Style="{DynamicResource PnPopupLabelForTextBox}" Content="{DynamicResource l_popup.MachineConfigView.Number}" Grid.Row="1" Grid.Column="0" />
            <Label Style="{DynamicResource PnPopupLabelForTextBox}" Content="{DynamicResource l_popup.MachineConfigView.ConfigFilePath}" Grid.Row="2" Grid.Column="0" />
            <TextBlock Style="{DynamicResource PnPopupFreeText}" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Text="{Binding MachinePath}" />
            <TextBlock Style="{DynamicResource PnPopupFreeText}" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Text="{Binding MachineNumber}" />
            <TextBlock Style="{DynamicResource PnPopupFreeText}" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Text="{Binding MachineFilePath}" />
            <viewModels:GeometryDataView Grid.Row="3" Grid.ColumnSpan="2" Margin="0" DataContext="{Binding GeometryDataViewModel}" />
          </Grid>
        </Grid>
      </ScrollViewer>
      <Grid Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button Style="{DynamicResource PnPopupOptionButton}" FontSize="11" Command="{Binding ImportBystronicClick}">
          <TextBlock Margin="20,5" Text="{DynamicResource l_popup.MachineConfigView.ImportBystronic}" />
        </Button>
        <Button Style="{DynamicResource PnPopupOptionButton}" FontSize="11" Grid.Column="1" Command="{Binding ConvertToC3moCommand}">
          <TextBlock Margin="20,5" Text="{DynamicResource l_popup.MachineConfigView.ConvertToC3mo}" />
        </Button>
      </Grid>
    </Grid>
  </Border>
</UserControl>