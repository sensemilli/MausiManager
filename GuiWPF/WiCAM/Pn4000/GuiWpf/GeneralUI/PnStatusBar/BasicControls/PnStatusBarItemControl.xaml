<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="WiCAM.Pn4000.GuiWpf.GeneralUI.PnStatusBar.BasicControls.PnStatusBarItemControl" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WiCAM.Pn4000.GuiWpf.GeneralUI.PnStatusBar.BasicControls">
  <FrameworkElement.Resources>
    <ResourceDictionary>
      <Style x:Key="LocalInfoPaneBorderStyle" TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Border.CornerRadius" Value="2" />
        <Setter Property="BorderBrush" Value="#FFB9C9DA" />
      </Style>
    </ResourceDictionary>
  </FrameworkElement.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" SharedSizeGroup="groupA" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Label Grid.Column="0" FontSize="12" Content="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    <Border Grid.Column="1" Style="{StaticResource LocalInfoPaneBorderStyle}" Background="{Binding FillBrush, RelativeSource={RelativeSource AncestorType=UserControl}}">
      <TextBlock Padding="4" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#FF000000" Text="{Binding Info, RelativeSource={RelativeSource AncestorType=UserControl}}" />
    </Border>
  </Grid>
</UserControl>